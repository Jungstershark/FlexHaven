<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_primary">

    </RelativeLayout>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:cardCornerRadius="25dp"
    android:layout_marginBottom="-20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background ="#FAF8F8"
        android:orientation="vertical"
        android:padding="28dp">

        <ImageView
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_margin="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/img" />

        <!-- This TextView is for displaying username! -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- This TextView is for displaying user Points! -->
        <TextView
            android:id="@+id/userPointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0.7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:drawableStart="@drawable/thumbs_up"
            android:text="  very responsive" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:drawableStart="@drawable/email"
            android:text="  verified" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/DisplayListingsProfile"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/my_primary"
                android:text="Listings"
                android:textStyle="bold"
                android:textSize="15dp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/AddItemProfile"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#F18B97"
                android:text="Add Item"
                android:textSize="15dp"
                app:cornerRadius="15dp" />

        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DCDBDB"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="141dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="15dp" />

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="-130dp"
                    android:background="@drawable/img_1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ralph Lauren Polo Tee"
                    android:textSize="11sp"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Price: $10"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"/>




                <com.google.android.material.button.MaterialButton
                    android:layout_width="141dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="-150dp"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="15dp" />

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="-130dp"
                    android:background="@drawable/img_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coldplay Alien Radio Tee"
                    android:textSize="11sp"
                    android:layout_marginStart="200dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Price: $8"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginStart="200dp" />


                <com.google.android.material.button.MaterialButton
                    android:layout_width="141dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="15dp" />

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="-130dp"
                    android:background="@drawable/img_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balenciaga Tee"
                    android:textSize="11sp"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Price:$12"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginStart="30dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="141dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="15dp" />

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="-130dp"
                    android:background="@drawable/img_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F1 Mercedez Patronas Tee"
                    android:textSize="11sp"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Price: $8"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginStart="30dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="141dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="-355dp"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="15dp" />

                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="-130dp"
                    android:background="@drawable/img_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supreme Travis Scott Tee"
                    android:textSize="11sp"
                    android:layout_marginStart="200dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental Price: $14"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginStart="200dp"/>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="-20dp">
    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="28dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/img_9"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="160dp"
            android:background="@drawable/img_8"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="280dp"
            android:background="@drawable/img_10"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</RelativeLayout>