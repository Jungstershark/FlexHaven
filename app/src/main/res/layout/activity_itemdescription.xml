<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AEB0B2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#AEB0B2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingBottom="80dp">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shirt_foreground"
                android:background="@drawable/rounded_bottom_corner_image"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- Back Button -->
            <Button
                android:id="@+id/ItemDescriptionToListings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_margin="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="Back"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toTopOf="@id/productImageView" />

            <!-- Product Title-->
            <TextView
                android:id="@+id/productTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Louis Vuitton Graphic Tee"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/productImageView"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@+id/productImageView"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"/>

            <!-- Rental Price -->
            <TextView
                android:id="@+id/rentalPriceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Rent Price: $20/day"
                app:layout_constraintEnd_toEndOf="@id/productImageView"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@+id/productTitleTextView"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ConditionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Condition: Unspecified"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/productImageView"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@+id/rentalPriceTextView"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/CategoriesTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Categories: Unspecified"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/productImageView"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@+id/ConditionTextView"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/LocationTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Location: Unspecified"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/productImageView"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@+id/CategoriesTextView"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/DescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Description: Unspecified"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/productImageView"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@+id/LocationTextView"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"/>



            <!-- Rent Now Button -->
            <Button
                android:id="@+id/rentNowButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rent Now"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#FF3951"
                app:layout_constraintEnd_toEndOf="@id/productImageView"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@+id/DescriptionTextView"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="10dp"/>

            <!-- Meet the Seller Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/meetTheSellerCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rentNowButton"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:paddingBottom="100dp"
                    android:background="@drawable/rounded_border">

                    <!-- Seller Image -->
                    <ImageView
                        android:id="@+id/sellerImageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_background"
                        android:contentDescription="Seller Profile Picture" />


                    <LinearLayout
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <!-- Seller Name -->
                        <TextView
                            android:id="@+id/sellerNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/black" />

                        <!-- Joined Date -->
                        <TextView
                            android:id="@+id/sellerTierTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tier: Bronze"
                            android:drawableStart="@drawable/add_image_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black" />

                        <!-- Responsiveness -->
                        <TextView
                            android:id="@+id/responsivenessTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Responsive: Very High"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <!-- Chat Button -->
                    <Button
                        android:id="@+id/ViewProfileButton"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#FF3951"
                        android:text="View Profile"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EBEBEB"
        android:layout_alignParentBottom="true"
        android:padding="8dp">

        <!-- Search Button -->
        <ImageButton
            android:id="@+id/ItemDescriptionSearchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/menu_search_button"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Home Button -->
        <ImageButton
            android:id="@+id/ItemDescriptionFYPButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/menu_home_button"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Profile Button -->
        <ImageButton
            android:id="@+id/ItemDescriptionProfileButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/menu_profile_button"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>
</RelativeLayout>