<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/itemProductImage"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:padding="2dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Item Name"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/itemProductImage"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textItemCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textItemName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/itemProductImage"
            android:layout_toRightOf="@+id/itemProductImage"
            android:text="Condition"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textItemCondition"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/itemProductImage"
            android:layout_toRightOf="@+id/itemProductImage"
            android:text="Price"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textItemPrice"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/itemProductImage"
            android:layout_toRightOf="@+id/itemProductImage"
            android:text="Description"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textItemDescription"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/itemProductImage"
            android:layout_toRightOf="@+id/itemProductImage"
            android:text="Location"
            android:textColor="#000"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>